{
    "compilerOptions": {
      "target": "es5",                            // Alvo de transpilação
      "lib": ["dom", "dom.iterable", "esnext"],    // Bibliotecas padrão
      "allowJs": true,                             // Permite arquivos JavaScript no projeto
      "skipLibCheck": true,                        // Ignora checagem de tipos de bibliotecas
      "esModuleInterop": true,                     // Compatibilidade com módulos ES
      "allowSyntheticDefaultImports": true,        // Permite importações sintéticas
      "strict": true,                              // Ativa verificações estritas
      "forceConsistentCasingInFileNames": true,    // Força nomes de arquivos consistentes
      "module": "esnext",                          // Módulo ES para imports/exports
      "moduleResolution": "node",                  // Resolução de módulos no estilo Node.js
      "resolveJsonModule": true,                   // Permite importar arquivos JSON
      "isolatedModules": true,                     // Garante que cada arquivo é tratado como um módulo isolado
      "noEmit": true,                              // Não emite arquivos de saída (útil para usar apenas para checagem)
      "jsx": "react-jsx"                           // Configuração para JSX no React 17+
    },
    "include": [
      "src"  // Inclui a pasta src no projeto
    ],
    "exclude": [
      "node_modules"  // Exclui a pasta node_modules
    ]
  }
